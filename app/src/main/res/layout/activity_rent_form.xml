<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#100F0F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/ride_hub_logo_w"
            android:contentDescription="Logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Pick-up and Return Details -->
        <Button
            android:id="@+id/pickUpDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Pick-up Date"
            android:backgroundTint="#FFFFFF"
            android:textColor="#100F0F"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/returnDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Return Date"
            android:backgroundTint="#FFFFFF"
            android:textColor="#100F0F"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/pickUpTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Pick-up Time"
            android:backgroundTint="#FFFFFF"
            android:textColor="#100F0F"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/dropOffTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Drop-off Time"
            android:backgroundTint="#FFFFFF"
            android:textColor="#100F0F"
            android:layout_marginBottom="24dp" />

        <!-- Driver Options -->
        <RadioGroup
            android:id="@+id/driverRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/withDriverOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With Driver"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/noDriverOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Drive"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF" />
        </RadioGroup>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:backgroundTint="#FFFFFF"
            android:textColor="#100F0F"
            android:layout_marginBottom="24dp" />

        <!-- Booking Summary -->
        <TextView
            android:id="@+id/bookingSummaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="start" />

    </LinearLayout>
</ScrollView>