<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactUsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/ride_hub_logo_d"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger Appeal Form"
            android:textColor="#111111"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We review our bookings to ensure a good experience. Your account may have violated our Terms of Service and has been deactivated."
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appeals will be reviewed based on the info provided. Decisions are final."
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*We may pursue legal action for fraudulent appeals."
            android:textColor="#b30000"
            android:textSize="13sp"
            android:layout_marginBottom="20dp" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:backgroundTint="#cccccc"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Country (fixed) -->
        <EditText
            android:id="@+id/inputCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Philippines"
            android:enabled="false"
            android:backgroundTint="#e0e0e0"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Country Code (fixed) -->
        <EditText
            android:id="@+id/inputCountryCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Philippines (+63)"
            android:enabled="false"
            android:backgroundTint="#e0e0e0"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Phone Input -->
        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:backgroundTint="#cccccc"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Reason Spinner -->
        <Spinner
            android:id="@+id/spinner_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Agreement Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I acknowledge and agree to the Code of Conduct"
            android:textColor="#111111"
            android:layout_marginBottom="24dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="#100F0F"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>